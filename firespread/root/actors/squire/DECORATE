  states
  {
  Spawn:
    BOS6 AB 10 A_Look
    loop
  See:
       BOS6 AABBCCDD 4 A_Chase
    loop
  Melee:
      BOS6 EF 8 A_FaceTarget
    BOS6 G 8 A_CustomMeleeAttack(6, "baron/melee")
    goto See
  Missile:
    BOS6 EF 8 A_FaceTarget
    BOS6 G 8 A_CustomMissile("SquireShot")
    goto See
  Pain:
    BOS6 H 2
    BOS6 H 2 A_Pain
    goto See
  Death:
    BOS6 I 8
    BOS6 J 8 A_Scream
    BOS6 K 8
    BOS6 L 8 A_NoBlocking
    BOS6 MN 8
    BOS6 O -1
    stop
    XDeath:
    BOS6 P 8
    BOS6 Q 8 A_XScream
    BOS6 R 8
    BOS6 S 8 A_NoBlocking
    BOS6 TU 8
    BOS6 V -1
    stop
  Raise:
    BOS6 ONMLKJI 8
    goto See
  }
}

